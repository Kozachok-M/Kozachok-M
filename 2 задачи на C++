Задача 1 (вывести количество элементов в стеке)
#include <iostream>
#include <stack>
using namespace std;

int main() {
    stack<int> s;      // Создаем стек
    s.push(5);         // Добавляем 5
    s.push(10);        // Добавляем 10
    s.push(15);        // Добавляем 15

    cout << s.size() << endl;  // Выводим размер стека
    return 0;
}


Задача 2 (вывести числа из стека в обратном порядке)
#include <iostream>
#include <stack>
using namespace std;

int main() {
    stack<int> s;          // Создаем пустой стек целых чисел
    s.push(10);            // Добавляем число 10 в стек
    s.push(20);            // Добавляем число 20 в стек
    s.push(30);            // Добавляем число 30 в стек

    // Пока стек не пуст, выводим верхний элемент и удаляем его
    while (!s.empty()) {
        cout << s.top() << endl;  // top() возвращает верхний элемент стека
        s.pop();                  // pop() удаляет верхний элемент
    }

    return 0;
}


