на python

# Code/bead_sort.py
def bead_sort(arr):
    """
    Сортировка бусинами для неотрицательных целых чисел
    """
    if not arr:
        return arr
    
    # 1. Находим максимальное значение
    max_val = max(arr)
    
    # 2. Создаем "абак" - матрицу бусин
    beads = [[0] * len(arr) for _ in range(max_val)]
    
    # 3. Размещаем бусины (представляем числа)
    for i, num in enumerate(arr):
        for j in range(num):
            beads[j][i] = 1
    
    # 4. Симулируем "падение" бусин под действием гравитации
    for i in range(max_val):
        # Считаем количество бусин в каждом ряду
        bead_count = sum(beads[i])
        
        # "Сбрасываем" бусины
        for j in range(len(arr)):
            beads[i][j] = 1 if j < bead_count else 0
    
    # 5. Считываем результат
    result = [0] * len(arr)
    for i in range(len(arr)):
        result[i] = sum(beads[j][i] for j in range(max_val))
    
    return result

# Тестирование
if __name__ == "__main__":
    test_arr = [3, 1, 4, 1, 5, 2]
    print("Исходный массив:", test_arr)
    sorted_arr = bead_sort(test_arr)
    print("Отсортированный массив:", sorted_arr)

вывод: Исходный массив: [3, 1, 4, 1, 5, 2]
       Отсортированный массив: [5, 4, 3, 2, 1, 1]
